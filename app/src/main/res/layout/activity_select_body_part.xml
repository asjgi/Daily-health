<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_body_part"
    android:orientation="vertical">

    <Button
        android:id="@+id/page_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow_button_06" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:weightSum="2">
        <!--If you add to textview this margin to be removed from layout.-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/shoulder_button_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shoulder_button_13" />

            <Button
                android:id="@+id/upper_leg_button_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/upper_leg_button_15" />

            <Button
                android:id="@+id/triceps_button_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/triceps_button_17" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/back_button_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_button_14" />


            <Button
                android:id="@+id/lower_leg_button_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/lower_leg_button_16" />

            <Button
                android:id="@+id/biceps_button_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/biceps_button_18" />
        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/place_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_of_next" />
</LinearLayout>